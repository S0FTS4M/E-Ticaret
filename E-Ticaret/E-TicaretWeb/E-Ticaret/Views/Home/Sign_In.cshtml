
@model E_Ticaret.Models.EntityFramework.CustomerAccount
@{

    ViewBag.Title = "Sign_In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Sign_In", "Home", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-5 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Sign Up</h5>
                        <form class="form-signin">
                            <div class="form-label-group">

                                @Html.LabelFor(m => m.customerUserName, new { @for = "inputText" })
                                @Html.TextBoxFor(m => m.customerUserName, new { @class = "form-control", @placeholder = "Username" })
                            </div>
                            <div class="form-label-group">
                                @Html.LabelFor(m => m.customerPassword, new { @for = "inputPassword" })
                                @Html.TextBoxFor(m => m.customerPassword, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                            </div>
                            <div class="form-label-group">
                                @Html.LabelFor(m => m.customerPassword, new { @for = "inputPassword" })
                                @Html.TextBoxFor(m => m.customerPassword2, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                            </div>
                            <div class="form-label-group">
                                @Html.LabelFor(m => m.customerPhoneNumber, new { @for = "inputText" })
                                @Html.TextBoxFor(m => m.customerPhoneNumber, new { @class = "form-control", @placeholder = "Phone Number" })
                            </div>
                            <div class="form-label-group">
                                @Html.LabelFor(m => m.customerEmail, new { @for = "inputText" })
                                @Html.TextBoxFor(m => m.customerEmail, new { @class = "form-control",@type="email", @placeholder = "E-Mail" })
                            </div>
                            <button class="btn btn-lg btn-primary btn-block text-uppercase btn-success" type="submit" style="margin-top:20px;">Sign up</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm-7 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Sign In</h5>
                        <form class="form-signin">
                            <div class="form-label-group">
                                @Html.LabelFor(m => m.customerUserName)
                                <label for="inputText">Username</label>
                                <input type="text" id="si_Username" class="form-control" placeholder="Username" required autofocus>
                            </div>
                            <div class="form-label-group">
                                <label for="inputPassword">Password</label>
                                <input type="password" id="si_Password" class="form-control" placeholder="Password" required>
                            </div>
                            <a for="forgetPassword" href="#">Forgot my password</a>
                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit" style="margin-top:20px;">Sign in</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
