@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav ml-auto flex-nowrap">
            <li class="nav-item">
                @Html.ActionLink("Merhaba " + User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link menu-item m-2" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Cart", "Shopping_Cart", "Home", htmlAttributes:new { @class = "nav-link m-2 menu-item" })
               
            </li>
            <li class="nav-item"><a class="nav-link m-2" href="javascript:document.getElementById('logoutForm').submit()">Log Out</a></li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav ml-auto flex-nowrap">
        <li class="nav-item">
            @Html.ActionLink("Sign Up", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink",@class = "nav-link menu-item m-2" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Sign In", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link menu-item m-2" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Cart", "Shopping_Cart", "Home", new { @class = "nav-link  m-2 menu-item" })
        </li>
    </ul>
}