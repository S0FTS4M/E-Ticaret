
@{
    var pd = ViewBag.products;
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string productName = ViewBag.Name;
}

<h4 style="text-align:center;">@ViewBag.Message</h4>
<div class="carousel-inner">
    <div class="container">
        <div class="row">
            <div class="card " style="display:contents;">
                <div class="col-md-4" id="column-left">
                    <ul>
                        <li>@Html.ActionLink("Sport Shoes", "CategoryShow", new { categoryName = "none", subCategory = "sport" }) </li>
                        <li>@Html.ActionLink("Casual Shoes", "CategoryShow", new { categoryName = "none", subCategory = "casual" }) </li>
                        <li>@Html.ActionLink("Winter Boots", "CategoryShow", new { categoryName = "none", subCategory = "winter" }) </li>
                        <li>@Html.ActionLink("Kids Shoes", "CategoryShow", new { categoryName = "none", subCategory = "kid" }) </li>
                        <li>@Html.ActionLink("Men Shoes", "CategoryShow", new { categoryName = "none", subCategory = "man" }) </li>
                        <li>@Html.ActionLink("Women Shoes", "CategoryShow", new { categoryName = "none", subCategory = "woman" }) </li>
                    </ul>
                    <hr />
                    <ul>
                        <li>@Html.ActionLink("Price: Low to High", "Search", new {SearchProductName=productName, sortBy = "lowFirst" }) </li>
                        <li>@Html.ActionLink("Price: High to Low", "Search", new { SearchProductName = productName, sortBy = "highFirst" }) </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                @foreach (var item in pd)
                {
                    <div class="row">
                        <div class="col-md-12 justify-content-center">
                            <div class="product-list-active">
                                <div class="row">
                                    <div class="col-sm-4">

                                        <a href=@Url.Action(
                                                            actionName: "Details",
                                                            controllerName:"Product",
                                                            routeValues: new
                                                            {
                                                                id = item.Id
                                                            })>
                                            <img style="width:100%;" src=@Url.Content(item.Image) />
                                        </a>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="name">
                                            <span>Brand : @item.Name</span>
                                        </div>
                                        <div class="price">
                                            <span class="price">Price : @item.Price $</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="decs">
                                            Description
                                            <br />
                                            <p>@item.Desc</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                }
            </div>
        </div>
    </div>
</div>


